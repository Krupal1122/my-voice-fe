rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Allow users to read/write their own documents
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow admin panel to read all users (for development)
      allow read: if true;
    }
    
    // OTPs collection - only accessible by Cloud Functions
    match /otps/{otpId} {
      allow read, write: if false; // Only Cloud Functions can access this
    }
    
    // Studies collection
    match /studies/{studyId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Authenticated users can write
    }
    
    // Questions collection
    match /questions/{questionId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Authenticated users can write
    }
    
    // FAQ collection
    match /faq/{faqId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Authenticated users can write
    }
    
    // Gifts collection
    match /gifts/{giftId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Authenticated users can write
    }
  }
}
